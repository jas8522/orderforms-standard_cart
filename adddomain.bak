<div id="domainentry" style="margin: 0 auto;float:none;text-align:center" class="col60">
	<span id="domain-input" style="font-size:18px"><input type="text" class="domain" name="sld" value="{$sld}" size="40" autocomplete="off" autocorrect="off" autocapitalize="none" spellcheck="false" /></span>
	{*
	<span id="tlds" style="display:block;line-height:18px;">
      	{foreach key=num item=listtld from=$tldslist}
        <span style="display:inline-block;margin:0 7px;text-align:center;"><input type="checkbox" name="tlds[]" checked="checked" value="{$listtld}" {if in_array($listtld,$tlds)} checked{/if} /><br />
          {$listtld}</span>
        {if $num % 5 == 0}
      	{/if}{/foreach}
	</span>
	*}
	{foreach key=num item=listtld from=$tldslist}{if in_array($listtld,$tlds)}<input type="hidden" name="tlds[]" value="{$listtld}" />{/if}{/foreach}
		
	<div class="clearfix" style="height:10px"></div>
    {if $inccode}<font color="#cc0000"><strong>{$LANG.imagecheck}</strong></font><br />
    {/if}
    {if $capatacha}<input type="hidden" name="direct" value="true">{/if}
   	<button type="submit" id="Submit" class="btn btn-primary btn-large">{$LANG.domainlookupbutton}</button>
</div>
<br />
</form>

{if $availabilityresults}

{include file="$template/includes/subheader.tpl" title=$LANG.morechoices}

<form method="post" action="{$smarty.server.PHP_SELF}?a=add&domain={$domain}">

<table width="100%" border="0" cellpadding="10" cellspacing="0" class="table-striped responsive">
	<thead>
	    <tr>
	      <th>{$LANG.domainname}</th>
	      <th>{$LANG.domainstatus}</th>
	      <th>{$LANG.domainmoreinfo}</th>
	    </tr>
	</thead>
	<tbody>
	{foreach key=num item=result from=$availabilityresults}
	<tr><td>{$result.domain}</td><td class="{if $result.status eq $searchvar}textgreen{else}textred{/if}">{if $result.status eq $searchvar}<input type="checkbox" name="domains[]" value="{$result.domain}"{if $result.domain|in_array:$domains} checked{/if} /> {$LANG.domainavailable}{else}{$LANG.domainunavailable}{/if}</td><td>{if $result.regoptions}<select name="domainsregperiod[{$result.domain}]">{foreach key=period item=regoption from=$result.regoptions}{if $regoption.$domain}<option value="{$period}">{$period} {$LANG.orderyears} @ {$regoption.$domain}</option>{/if}{/foreach}</select>{/if}</td></tr>
	{/foreach}
	</tbody>
</table>

<p align="center"><button type="submit" id="Submit" class="btn btn-primary btn-large">{$LANG.continue} &rarr;</button></p>

</form>

{else}

